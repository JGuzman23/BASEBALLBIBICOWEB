@model IEnumerable<Categoria>
@{
    Layout = "_Layout";
}

@{
    int primera = 0;
    int segunda = 0;
    int tercera = 0;
}

@if (Model != null)
{
    @foreach (var item in Model)
    {
        if (item.Valor == 1)
        {
            primera = 1;
        }
        if (item.Valor == 2)
        {
            segunda = 2;
        }
        if (item.Valor == 3)
        {
            tercera = 3;
        }

    }
}
<style>

    .bases {
        display: flex;
        width: 400px;
        
    }

    .primera {
        background: red;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 10px;
    }

    body {
        background-image: url('../IMG/677B3AB8-12A4-47F3-B082-66CD99698317.JPEG');
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
 
</style>

<div class="container-father">
    <div class="play-container">
        <div id="stadium">
            <div id="field" class="mowed-grass"></div>
            <div id="in-field"></div>
            <div id="in-field-grass" class="mowed-grass"></div>
            <div id="batting-circle"></div>
            <div id="first-base" class="base">

                @if (primera == 1)
                {
                    <div class="pulse"></div>
                }
                <div class="action-area"></div>
            </div>
            <div id="second-base" class="base">
                @if (segunda == 2)
                {
                    <div class="pulse"></div>
                }
                <div class="action-area"></div>
            </div>
            <div id="thrid-base" class="base">
                @if (tercera == 3)
                {
                    <div class="pulse"></div>
                }
                <div class="action-area"></div>
            </div>
            <div id="home-plate">
                <div class="action-area"></div>
            </div>
            <!-- <div class="home-plate-pulse pulse"></div> -->
            <div id="base-lines"></div>
            <div id="pitchers-mound"></div>
            <div id="pitchers-plate"></div>
            <div id="first-circle" class="half-circle"></div>
            <div id="second-circle" class="half-circle"></div>
            <div id="third-circle" class="half-circle"></div>
            <div id="batters-box-right" class="batters-box"></div>
            <div id="batters-box-left" class="batters-box"></div>
            <div id="first-base-thing"></div>
        </div>
    </div>
    <div class="control-container">

        


        <div class="container">
            <div class=" mt-5">
                <h1 style="font-size:70px ; color:whitesmoke;">Baseball Biblico </h1>
            </div>
            <hr />
            <div class="col-md-12 juego-container">


                <form method="post" class="col-md-6" style="display: flex">
                    <div class="col-md-7" style="border-radius: 18px 0 0 18px; background: #129730; color: white; ">
                        <div style="display: flex;">
                            <div class="mr-1">
                                <input type="radio" name="Jbase" value="HIT" />
                            </div>
                            <div>
                                <h5> HIT</h5>
                            </div>
                        </div>
                        <div style="display: flex;">
                            <div class="mr-1">
                                <input type="radio" name="Jbase" value="DOBLE" />
                            </div>
                            <div>
                                <h5> DOBLE</h5>
                            </div>
                        </div>
                        <div style="display: flex;">
                            <div class="mr-1">
                                <input type="radio" name="Jbase" value="TRIPLE" />
                            </div>
                            <div>
                                <h5> TRIPLE</h5>
                            </div>
                        </div>
                        <div style="display: flex;">
                            <div class="mr-1">
                                <input type="radio" name="Jbase" value="HOMERUM" />
                            </div>
                            <div>
                                <h5> HOME RUM</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7" style="border-radius: 0 18px 18px 0; background: #058AF6; color: white;">
                        <div class="col-md-12" style="margin:auto; margin-top:30%;">
                            <button asp-controller="Partida" asp-action="Preguntas" type="submit" style="background: #058AF6; color:white;"><h2>BATEAR</h2></button>
                        </div>
                    </div>
                </form>

                <div class="col-md-4">

                </div>
            </div>

            <div class="col-md-12">



            </div>

            <div class="col-md-12 mt-5 ">
                <div class="col-md-12 ">

                    <h2 style="color: white;">Outs:</h2>
                    <div class="bases">

                        @switch (@ViewBag.outs)
                        {
                            case 1:
                                <div class="primera"></div>

                                break;
                            case 2:
                                <div class="primera"></div>
                                <div class="primera"></div>

                                break;
                            case 3:
                                <div class="primera"></div>
                                <div class="primera"></div>
                                <div class="primera"></div>

                                break;
                            default:
                                break;
                        }



                    </div>
                    <br />

                    <table class="table" style="border: 3px solid white; color: white; background: #836539; ">
                        <thead>
                            <tr>


                                <th data-bind="text: num"><h3>Inning: @ViewBag.inning</h3></th>
                                <th> <h3>Carreras anotadas</h3></th>


                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in @ViewBag.equipos)
                            {
                                <tr>
                                    <td>
                                        <h5>@item.Name</h5>
                                    </td>

                                    <td> <h5>@ViewBag.carrerasAnotadas</h5></td>

                                </tr>
                            }

                           
                        </tbody>
                    </table>
                </div>




            </div>

        </div>
    </div>
</div>










