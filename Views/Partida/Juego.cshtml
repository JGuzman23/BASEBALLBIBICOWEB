@model IEnumerable<Categoria>

<div class="text-center mt-5" style="border:1px solid red">
    <h1 class="display-4">Baseball Biblico </h1>



</div>


<div class="container">
    <div class="col-md-12 juego-container">


        <form method="post" class="col-md-6">
            <div class="col-md-4 ">

                <div style="border: 1px solid red">


                    <div>
                        <input type="radio" name="Jbase" value="HIT" />
                        <span> HIT</span>
                    </div>
                    <div>
                        <input type="radio" name="Jbase" value="DOBLE" />
                        <span> DOBLE</span>
                    </div>
                    <div>
                        <input type="radio" name="Jbase" value="TRIPLE" />
                        <span> TRIPLE</span>
                    </div>
                    <div>
                        <input type="radio" name="Jbase" value="HOMERUM" />
                        <span> HOME RUM</span>
                    </div>

                </div>

            </div>
            <div class="col-md-4">

                <div>
                    <button class="btn btn-outline-success" asp-controller="Partida" asp-action="Preguntas" type="submit">BATEAR </button>
                </div>

            </div>
        </form>

        <div class="col-md-4">

        </div>
    </div>

    <div class="col-md-12">

        <div>
            <div class="col-md-6">
                <span>Out: @ViewBag.outs</span>
               
                @if (Model!=null)
                {
                    @foreach (var item in Model)
                    {

                        <h3>@item.Valor</h3>
                       
                    }
                }
                else
                {
                    <h3>Nadie en base</h3>
                }
            </div>
        </div>

    </div>

    <div class="col-md-12 mt-5 ">

        <div class="col-md-12 ">
            <table class="table" style="border: 1px solid gray">
                <thead>
                    <tr>
                      

                        <th data-bind="text: num">Inning: @ViewBag.inning</th>
                        <th>Carreras anotadas</th>


                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <span>Luz de la pampara</span>
                        </td>
                       
                        <td>@ViewBag.carrerasAnotadas</td>

                    </tr>
                    <tr>
                        <td>
                            <span>Verdad encendida</span>
                        </td>

                        <td>@ViewBag.carrerasAnotadas</td>



                    </tr>
                </tbody>
            </table>
        </div>




    </div>

</div>









